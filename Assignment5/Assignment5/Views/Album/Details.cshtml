@model Assignment5.Models.AlbumWithDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details - @Model.Name</h2>

<div>
    <h4>Album Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Model.ReleaseDate.ToShortDateString()
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </dt>

        <dd>
            <img src=@Model.UrlAlbum alt="album cover image" width="150" height="150" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Coordinator)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Coordinator)
        </dd>
        <dt>
            Number of tracks on this album
        </dt>

        <dd>
            @Model.Track.Count()
        </dd>
        <dt>
            Number of artists on this album
        </dt>

        <dd>
            @Model.Artist.Count()
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index") |
    @Html.ActionLink("Add track to this album", "AddTrack", new { id = Model.AlbumId })
</p>
